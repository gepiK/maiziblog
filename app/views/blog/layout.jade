extends ../layout
append css
    link(href='/components/font-awesome/css/font-awesome.css', rel="stylesheet")
    link(href="/css/blog.css", rel="stylesheet")
block main
    block header
        .blog-masthead
            .container
                nav.blog-nav.pull-left
                    if pageName ==='/'
                        a.blog-nav-item.active(href="/") 首页
                    else
                        a.blog-nav-item(href="/") 首页
                    if pageName==='/about'
                        a.blog-nav-item.active(href="/about") 关于我们
                    else
                        a.blog-nav-item(href="/about") 关于我们
                    if pageName==='/link'
                        a.blog-nav-item.active(href="/link") 联系我们
                    else
                        a.blog-nav-item(href="/link") 联系我们

                form.navbar-form.pull-right(method="get",action="/posts/")
                    input.form-control(type="text",name="keyword",placeholder="搜索...",value=keyword)
                         
    .container
        .row
            .col-sm-8.blog-main
                != messages()
                block content
            .col-sm-3.col-sm-offset-1.blog-sidebar
                .sidebar-module
                    h4 文章分类
                    |             
                    ol.list-unstyled
                        each category in categories
                            li
                                a(href='/posts/category/'+category.name)=category.name
                            
            

                |           
                .sidebar-module
                    h4 友情链接
                    |             
                    ol.list-unstyled
                    li
                        a(href="#") GitHub
                    |               
                    li
                        a(href="#") Twitter
                    |               
                    li
                        a(href="#") Facebook

    block footer
        footer.blog-footer
            p node footer by xiekaif@163.com
            p
            a(href="#") 回到顶部
            &nbsp;&nbsp;&nbsp;&nbsp;
            a(href="/admin/users/login", title="用户登录") 用户登录 
            &nbsp;&nbsp;&nbsp;&nbsp;
            a(href="/admin/users/register", title="用户注册") 用户注册 
    

