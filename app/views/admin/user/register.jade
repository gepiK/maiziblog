extends ../layout_user

block content
    form.form-signin.form-register(method="post",action="/admin/users/register")
        h2.form-signin-heading 管理员登录
            small
                 a.pull-right(href="/admin/users/login", title="登录") 登录
        |         
        label.sr-only(for="email") 邮箱
        |         
        input.email.form-control(name="email", type="email", placeholder="邮箱", required="", autofocus="")
        |         
        label.sr-only(for="password") 密码
        |         
        input.password.form-control(name="password", type="password", placeholder="密码", required="")
        |         
        label.sr-only(for="confirmPassword") 重复密码
        |         
        input.confirm-password.form-control(name="confirmPassword", type="password", placeholder="重复密码", required="")


        button.btn.btn-lg.btn-primary.btn-block(type="submit") 注册